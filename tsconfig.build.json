{
	"extends": "./tsconfig.json",
	"compilerOptions": {
		"outDir": "dist",
		"paths": { "*": [
			"../node_modules/*/src/index",
			"../node_modules/*/lib/index",
			"../node_modules/*/index",
			"../node_modules/*/dist/index"
		] },
		"esModuleInterop": true,
		"types": [],
		"noEmit": false
	},
	"include": ["src"],
	"exclude": [
		"node_modules",
		"src/**/*.test.ts",
		"src/test"
	]
}