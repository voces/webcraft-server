{
	"compilerOptions": {
		"outDir": "dist",
		"baseUrl": "src",
		"allowJs": true,
		"target": "ESNext",
		"lib": [ "ES2019", "ES2020", "DOM" ],
		"moduleResolution": "node",
		"module": "ESNext",
		"strict": true,	
		"noImplicitAny": true,
		"noImplicitThis": true,
		"alwaysStrict": true,
		"strictNullChecks": true,
		"paths": { "*": [
			"../node_modules/*/src/index",
			"../node_modules/*/lib/index",
			"../node_modules/*/index",
			"../node_modules/*/dist/index"
		] },
		"esModuleInterop": true,
		"types": []
	},
	"include": ["src"],
	"exclude": [
		"node_modules",
		"src/**/*.test.ts",
		"src/test"
	]
}