{
  "name": "mvp-bd-server",
  "version": "1.0.0",
  "description": "Minimum viable product of Bulldog server",
  "main": "src/index.ts",
  "scripts": {
    "build-passwords-worker": "esbuild src/api/routes/auth/passwordsWorker.ts --bundle --sourcemap --platform=node --outfile=dist/passwordsWorker.js",
    "build": "esbuild src/index.ts --bundle --sourcemap --platform=node --outfile=dist/index.js",
    "dev": "node scripts/dev.js",
    "lint": "eslint 'src/**/*.ts' --quiet --fix",
    "postinstall": "node scripts/postinstall.js",
    "start": "node --enable-source-maps dist/index.js",
    "test-lint": "eslint src --ext .js,.ts,.jsx,.tsx --max-warnings 0",
    "test": "vt **/*.test.js --no-parallel",
    "typecheck": "tsc --noEmit"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.12.11",
    "@types/hapi__hapi": "^20.0.3",
    "@types/hapi__inert": "^5.2.2",
    "@types/jest": "^26.0.19",
    "@types/joi": "^14.3.4",
    "@types/jsonwebtoken": "^8.5.0",
    "@types/libsodium-wrappers": "^0.7.8",
    "@types/mime-types": "^2.1.0",
    "@types/mysql2": "github:types/mysql2",
    "@types/node": "^14.14.19",
    "@types/ws": "^7.4.0",
    "@typescript-eslint/eslint-plugin": "^4.11.1",
    "@typescript-eslint/parser": "^4.11.1",
    "babel-eslint": "^10.1.0",
    "esbuild": "^0.9.2",
    "eslint": "^7.16.0",
    "eslint-config-mdcs": "^5.0.0",
    "eslint-config-prettier": "^7.1.0",
    "eslint-config-verit": "^3.4.0",
    "eslint-plugin-prettier": "^3.3.0",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "jest": "^26.6.3",
    "jest-ts-webcompat-resolver": "^1.0.0",
    "prettier": "^2.2.1",
    "ts-jest": "^26.4.4",
    "ts-node": "^9.1.1",
    "tsc-watch": "^4.2.9",
    "typescript": "^4.1.3"
  },
  "license": "ISC",
  "dependencies": {
    "@hapi/hapi": "^20.1.0",
    "@hapi/inert": "^6.0.3",
    "chalk": "^4.1.0",
    "joi": "^17.3.0",
    "jsonwebtoken": "^8.5.1",
    "libsodium-wrappers": "^0.7.8",
    "mime-types": "^2.1.27",
    "mysql2": "^2.2.5",
    "ws": "^7.4.2"
  }
}
