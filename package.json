{
	"name": "mvp-bd-server",
	"private": true,
	"description": "Minimum viable product of Bulldog server",
	"main": "src/index.ts",
	"scripts": {
		"build-passwords-worker": "esbuild src/api/routes/auth/passwordsWorker.ts --bundle --sourcemap --platform=node --format=esm --external:libsodium-wrappers --outfile=dist/passwordsWorker.js",
		"build-main": "node scripts/build.js",
		"build": "npm run build-main && npm run build-passwords-worker",
		"dev": "node scripts/build.js --watch",
		"lint": "eslint 'src/**/*.ts' --quiet --fix",
		"postinstall": "node scripts/postinstall.js",
		"start": "node --enable-source-maps dist/index.js",
		"test-lint": "eslint src --ext .js,.ts,.jsx,.tsx --max-warnings 0",
		"test": "vt **/*.test.js --no-parallel",
		"typecheck": "tsc --noEmit"
	},
	"devDependencies": {
		"@babel/preset-env": "^7.15.8",
		"@types/hapi__hapi": "^20.0.9",
		"@types/hapi__inert": "^5.2.3",
		"@types/jest": "^27.0.2",
		"@types/joi": "^17.2.3",
		"@types/jsonwebtoken": "^8.5.5",
		"@types/libsodium-wrappers": "^0.7.9",
		"@types/mime-types": "^2.1.1",
		"@types/mysql2": "github:types/mysql2",
		"@types/node": "^16.11.5",
		"@types/tar": "^6.1.0",
		"@types/ws": "^8.2.0",
		"@typescript-eslint/eslint-plugin": "^4.33.0",
		"@typescript-eslint/parser": "^4.11.1",
		"babel-eslint": "^10.1.0",
		"esbuild": "^0.13.9",
		"eslint": "^7.32.0",
		"eslint-config-mdcs": "^5.0.0",
		"eslint-config-prettier": "^8.3.0",
		"eslint-config-verit": "^4.0.0",
		"eslint-plugin-prettier": "^4.0.0",
		"eslint-plugin-simple-import-sort": "^7.0.0",
		"jest": "^27.3.1",
		"jest-ts-webcompat-resolver": "^1.0.0",
		"node-fetch": "^3.0.0",
		"prettier": "^2.4.1",
		"tar": "^6.1.11",
		"ts-jest": "^27.0.7",
		"ts-node": "^10.4.0",
		"tsc-watch": "^4.5.0",
		"typescript": "^4.4.4"
	},
	"license": "ISC",
	"dependencies": {
		"@hapi/hapi": "^20.2.1",
		"@hapi/inert": "^6.0.4",
		"chalk": "^4.1.2",
		"joi": "^17.4.2",
		"jsonwebtoken": "^8.5.1",
		"libsodium-wrappers": "^0.7.9",
		"mime-types": "^2.1.33",
		"mysql2": "^2.3.2",
		"ws": "^8.2.3"
	},
	"type": "module"
}
